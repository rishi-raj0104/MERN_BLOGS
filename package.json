{
  "dependencies": {
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "dev": "concurrently \"npm:server:dev\" \"npm:client:dev\"",
    "start": "concurrently \"npm:server:start\" \"npm:client:preview\"",
    "server:dev": "npm --prefix backend run dev",
    "server:start": "npm --prefix backend start",
    "client:dev": "npm --prefix client run dev",
    "client:preview": "npm --prefix client run preview"
  }
}
